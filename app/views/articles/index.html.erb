 <%= link_to "Add an Article", new_article_path %>

 <% @articles.each do |article| %>
   <h2> <%= link_to article.title.capitalize, article_path(article) %></h2>
   <h3><%= article.content %></h3>

   <p><%= link_to "Edit the article", edit_article_path(article) %></p>
   <p><%= link_to "Delete article", article_path(article), method: :delete %></p>
   <br>
   <br>
 <% end %>
